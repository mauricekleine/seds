{
  "name": "seds",
  "version": "1.0.0",
  "description": "The official website for SEDS (sedsngo.org)",
  "main": "index.js",
  "private": true,
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./app.css -o app/app.css",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./app.css -o app/app.css",
    "lint": "eslint ./app && prettier ./app --check",
    "lint:fix": "eslint ./app --fix && prettier ./app --write",
    "prepare": "husky install",
    "start": "remix-serve build",
    "typecheck": "tsc -b"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mauricekleine/seds.git"
  },
  "author": "Maurice Kleine <hey@mauricekleine.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mauricekleine/seds/issues"
  },
  "homepage": "https://sedsngo.org",
  "dependencies": {
    "@mailchimp/mailchimp_transactional": "~1.0.50",
    "@remix-run/node": "~1.7.5",
    "@remix-run/react": "~1.7.5",
    "@remix-run/vercel": "~1.7.5",
    "@tailwindcss/typography": "~0.5.8",
    "@vercel/node": "~2.6.3",
    "classnames": "~2.3.2",
    "contentful": "~9.2.11",
    "dotenv": "~16.0.3",
    "phosphor-react": "~1.4.1",
    "react": "~18.2.0",
    "react-compare-image": "~3.1.0",
    "react-dom": "~18.2.0",
    "tailwindcss": "~3.2.4",
    "yup": "~0.32.11"
  },
  "devDependencies": {
    "@remix-run/dev": "~1.7.5",
    "@remix-run/eslint-config": "~1.7.5",
    "@remix-run/serve": "~1.7.5",
    "@tailwindcss/forms": "~0.5.3",
    "@types/node": "~18.11.9",
    "@types/react": "~18.0.25",
    "@types/react-dom": "~18.0.9",
    "concurrently": "~7.5.0",
    "eslint": "~8.27.0",
    "eslint-config-prettier": "~8.5.0",
    "eslint-plugin-import": "~2.26.0",
    "eslint-plugin-unused-imports": "~2.0.0",
    "husky": "~8.0.2",
    "lint-staged": "~13.0.3",
    "prettier": "~2.7.1",
    "typescript": "~4.9.3"
  },
  "engines": {
    "node": "^16"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
