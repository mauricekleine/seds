{
  "name": "seds",
  "version": "1.0.0",
  "description": "The official website for SEDS (sedsngo.org)",
  "main": "index.js",
  "private": true,
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./app.css -o app/app.css",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./app.css -o app/app.css",
    "lint": "eslint ./app && prettier ./app --check",
    "lint:fix": "eslint ./app --fix && prettier ./app --write",
    "prepare": "husky install",
    "start": "remix-serve build",
    "typecheck": "tsc -b"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mauricekleine/seds.git"
  },
  "author": "Maurice Kleine <hey@mauricekleine.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mauricekleine/seds/issues"
  },
  "homepage": "https://sedsngo.org",
  "dependencies": {
    "@mailchimp/mailchimp_transactional": "^1.0.47",
    "@remix-run/node": "~1.4.1",
    "@remix-run/react": "~1.4.1",
    "@remix-run/vercel": "~1.4.1",
    "@tailwindcss/typography": "^0.5.2",
    "@vercel/node": "~1.14.0",
    "classnames": "^2.3.1",
    "contentful": "~9.1.4",
    "dotenv": "~16.0.0",
    "phosphor-react": "^1.4.1",
    "react": "~17.0.2",
    "react-compare-image": "~3.1.0",
    "react-dom": "~17.0.2",
    "tailwindcss": "^3.0.23",
    "yup": "~0.32.11"
  },
  "devDependencies": {
    "@remix-run/dev": "~1.4.1",
    "@remix-run/eslint-config": "~1.4.1",
    "@remix-run/serve": "~1.4.1",
    "@tailwindcss/forms": "^0.5.0",
    "@types/node": "~17.0.23",
    "@types/react": "~17.0.43",
    "@types/react-dom": "~17.0.14",
    "concurrently": "^7.1.0",
    "eslint": "~8.14.0",
    "eslint-config-prettier": "~8.5.0",
    "eslint-plugin-import": "~2.26.0",
    "eslint-plugin-unused-imports": "~2.0.0",
    "husky": "~7.0.4",
    "lint-staged": "~12.4.0",
    "prettier": "~2.6.2",
    "typescript": "~4.6.3"
  },
  "engines": {
    "node": ">=14"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
